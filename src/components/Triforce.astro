---
interface Props {
  topLink: {
    href: string;
    text: string;
  };
  bottomLeftLink: {
    href: string;
    text: string;
  };
  bottomRightLink: {
    href: string;
    text: string;
  };
}

const { topLink, bottomLeftLink, bottomRightLink } = Astro.props;
---

<div class="triforce-container">
  <div class="triforce">
    <a class="triangle top" href={topLink.href} style="cursor: pointer;">{topLink.text}</a>
    <a class="triangle bottom-left" href={bottomLeftLink.href} style="cursor: pointer;">{bottomLeftLink.text}</a>
    <a class="triangle bottom-right" href={bottomRightLink.href} style="cursor: pointer;">{bottomRightLink.text}</a>
  </div>
</div>

<style>
  .triforce-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 5rem 0;
  }

  .triforce {
    position: relative;
    width: 370px;
    height: 290px;
  }

  .triangle {
    position: absolute;
    width: 0;
    height: 0;
    border-left: 75px solid transparent;
    border-right: 75px solid transparent;
    border-bottom: 130px solid #FFD700;
    background: none;
    border-top: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    color: #000;
    font-weight: bold;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding-top: 35px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 120px;
  }

  .triangle:hover {
    border-bottom-color: #FFA500;
    transform: scale(1.1);
    color: #333;
  }

  .top {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .top:hover {
    transform: translateX(-50%) scale(1.1);
  }

  .bottom-left {
    bottom: 0;
    left: 0;
    transform: translateX(25%);
  }

  .bottom-left:hover {
    transform: translateX(25%) scale(1.1);
  }

  .bottom-right {
    bottom: 0;
    right: 0;
    transform: translateX(-25%);
  }

  .bottom-right:hover {
    transform: translateX(-25%) scale(1.1);
  }
</style> 