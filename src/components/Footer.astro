---
import { SITE_TITLE, COLORS, BREAKPOINTS } from '../consts';

const currentYear = new Date().getFullYear();
---

<footer>
	<div class="footer-content">
		<div class="copyright">
			&copy; {currentYear} 
			<img 
				src="/img/favicon-96x96.png" 
				alt={`${SITE_TITLE} Logo`} 
				width="32" 
				height="32"
			> 
			<span data-translate="footer_text">All rights reserved.</span>
		</div>
	</div>
</footer>

<style>
	footer {
		width: 100%;
		padding: 2em 0;
		background: var(--color-secondary);
		color: var(--color-primary);
		text-align: center;
		position: relative;
		margin: 0;
		box-sizing: border-box;
	}

	.footer-content {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 1em;
	}

	.copyright {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5em;
	}

	.copyright img {
		transition: transform 0.3s ease;
	}

	.copyright:hover img {
		transform: scale(1.05);
	}
</style>

<script>
	// Variables CSS globales
	document.documentElement.style.setProperty('--color-primary', '${COLORS.primary}');
	document.documentElement.style.setProperty('--color-secondary', '${COLORS.secondary}');
	document.documentElement.style.setProperty('--max-width', '${BREAKPOINTS.desktop}');
</script>
